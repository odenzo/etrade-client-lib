<configuration reload="true" >

	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>
			M:%d{HH:mm:ss.SSS} [%t] %-5level %logger \n - %msg%n
			</Pattern>
		</layout>
	</appender>

	<logger name="org.http4s.blaze" level="INFO" />
	<logger name="org.http4s.blazecore" level="INFO" />
	<logger name="org.http4s.blazecore" level="INFO" />
	<logger name="org.http4s.blaze.client.PoolManager" level="WARN"  />
	<logger name="org.http4s.blaze.channel" level="WARN"  />
	<logger name="org.http4s.blaze.channel.nio1.SelectorLoop" level="WARN"  />



	<root level="debug">
		<appender-ref ref="CONSOLE"/>
	</root>

</configuration>